<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Home_Fragment">

<RelativeLayout
    android:id="@+id/home_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="199dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logo_home" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="80dp"
        android:layout_height="54dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/profile_icon"
        app:civ_circle_background_color="@color/black" />

</RelativeLayout>

<View
    android:id="@+id/view_toolbar"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_below="@+id/home_toolbar"
    android:background="@color/Red" />

<TextView
    android:id="@+id/tv_intro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/view_toolbar"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="14dp"
    android:elevation="12dp"
    android:text="Check out what we have for you!"
    android:textColor="@color/black"
    android:textSize="22sp"
    android:textStyle="bold" />


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_intro"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="18dp"
    android:layout_marginRight="14dp"
    android:elevation="8dp"
    android:outlineAmbientShadowColor="@color/LighterRed"
    app:cardBackgroundColor="@color/Grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/schemeImg"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:elevation="16dp"
            android:src="@drawable/homeschemeimg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:padding="10dp"
                android:text="Launch Year :"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/launchYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:padding="10dp"
                android:text="2006"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:padding="10dp"
                android:text="Vision:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="16dp"
                android:maxLines="5"
                android:padding="6dp"
                android:text="The Government’s vision is to spread the inclusion of the water system ‘Har Khet ko pani’ and improve water user proficiency."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_explore_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:background="@color/LighterRed"
            android:elevation="16dp"
            android:padding="12dp"
            android:shadowColor="@color/white"
            android:text="explore More >>"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.cardview.widget.CardView>


</RelativeLayout>
